{
  "name": "ewallet",
  "version": "1.0.0",
  "license": "MIT",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "npx tsc",
    "prettier": "npx prettier . --write",
    "lint": "eslint . --report-unused-disable-directives",
    "lint:fix": "npm run lint -- --fix",
    "dev": "NODE_ENV=development ts-node-dev src/index.ts",
    "dev:local": "NODE_ENV=development ts-node-dev -r dotenv/config src/index.ts dotenv_config_path=.env",
    "db:migrate": "dotenv -e .env -- npx prisma migrate dev",
    "db:deploy": "dotenv -e .env.prod -- npx prisma migrate deploy",
    "db:reset": "dotenv -e .env -- npx prisma migrate reset",
    "db:seed": "dotenv -e .env -- npx prisma db seed",
    "test": "dotenv -e .env.test -- vitest --no-file-parallelism",
    "test:coverage": "dotenv -e .env.test -- vitest run --coverage"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "4.18.2",
    "express-async-errors": "^3.1.1",
    "express-handlebars": "^7.1.2",
    "express-validator": "^7.0.1",
    "module-alias": "^2.2.3",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.2.5"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-ts": "^1.5.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitest/coverage-v8": "^3.0.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import-newlines": "^1.3.4",
    "fishery": "^2.2.3",
    "prisma": "^6.13.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vitest": "^3.0.5",
    "vitest-mock-extended": "^2.0.2"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
