{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/scripts/**/*.ts",
    "src/types/**/*.ts",
    "src/providers/**/*.ts",
    "src/services/**/*.ts",
    "src/utils/**/*.ts",
    "src/errors/**/*.ts",
    "src/entities/**/*.ts",
    "src/policies/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
